<%= render 'shared/page_title', title: "Create New Category" %>

<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= simple_form_for @category do |f| %>
      
      <%= f.input :name %>

      
      <%= f.submit 'New Category', class: "btn btn-success" %>
    <% end %>
  </div>
</div>